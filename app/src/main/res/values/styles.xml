<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearances -->
    <style name="TextAppearance.ProjectManagement.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>
    <style name="TextAppearance.ProjectManagement.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>
    <style name="TextAppearance.ProjectManagement.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>
    </style>

    <style name="TextAppearance.ProjectManagement.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/montserrat_bold</item>
